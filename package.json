{
  "name": "rmc-push",
  "displayName": "Firebase Push",
  "description": "Push data to Firebase Remote Config from VS Code, focused on Flutter developers.",
  "version": "0.0.2",
  "publisher": "Xclusivecyborg",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Xclusivecyborg/rmc-push.git"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "firebase",
    "remote config",
    "flutter",
    "mobile",
    "push"
  ],
  "activationEvents": [
    "onCommand:rmc-push.pushRemoteConfig"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rmc-push.pushRemoteConfig",
        "title": "Push to Firebase Remote Config",
        "category": "RMC Push"
      },
      {
        "command": "rmc-push.resetServiceAccountPath",
        "title": "Reset Service Account Path",
        "category": "RMC Push"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Firebase Remote Config Push",
      "properties": {
        "rmcPush.serviceAccountPath": {
          "type": "string",
          "default": "",
          "description": "Path to your Firebase service account JSON file.",
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.90.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "jsonwebtoken": "^9.0.3",
    "node-fetch": "^2.7.0"
  }
}